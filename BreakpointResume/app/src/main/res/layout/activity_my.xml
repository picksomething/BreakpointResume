<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <EditText
        android:id="@+id/downloadurl"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="@string/urlhint"
        android:text="http://xz.cr173.com//soft1/haozip.exe"/>
    <Button
        android:id="@+id/startdownload"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloadurl"
        android:layout_centerHorizontal="true"
        android:text="@string/down"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@id/downloadurl"
        android:layout_alignLeft="@id/downloadurl"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/downloadurl"
        android:layout_alignLeft="@id/downloadurl"/>
</RelativeLayout>
